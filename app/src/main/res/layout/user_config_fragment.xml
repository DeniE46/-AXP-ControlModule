<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_config_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:padding="4dp"
    android:orientation="vertical">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.axp.denis.axppanel.MainActivity"
        android:orientation="vertical"
        android:foregroundTint="@color/colorAccent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:background="@drawable/wall_background"
                android:gravity="bottom"
                android:weightSum="2">

        <Switch
            android:id="@+id/enable_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/change_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="70dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/buttons_background">
        <Switch
            android:id="@+id/buttons_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="225dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/swap_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"/>

            <Switch
                android:id="@+id/swap_sketches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/launchers_background">
                <Switch
                    android:id="@+id/filter_launchers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="150dp"
                    android:layout_marginBottom="60dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/battery_background"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/hide_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hide percentage"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:textColor="#0361e1"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/hide_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hide progress"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:textColor="#0361e1"
                    android:layout_marginTop="15dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/launch_themes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/themes_background"></LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
